{
    //Le template index s'applique à tout index qui respecte les patterns
    "index_patterns":[
        "movies-*",
        "big-movies-*"
    ],
    "template":{
        "aliases":{
            "movies":{}
        },
        "settings":{
            "number_of_shards":2,
            "number_of_replicas" : 2
        },
        "mappings": {
            "properties": {
                // nom de la propriété => objet
                "fields" : {
                    //Les membres de notre objet
                    "properties" : {
                        //Chaque membre a un type
                        "directors" : {
                            "type": "text",
                            "fields":{
                                "raw":{
                                    "type":"keyword"
                                } 
                            }
                        },
                        "actors" : {
                            "type": "text",
                            "fields":{
                                "raw":{
                                    "type":"keyword"
                                }
                            }
                        },
                        "release_date" : {
                            "type" : "date"
                        }
                    }
                }
            }
        }
    }
}